<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:padding="15dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@id/judul"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20dp"
        android:gravity="center"
        android:text="Congratulations!"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/judul"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="200dp"
        android:layout_height="200dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageViewRedeem"
                android:background="@android:color/darker_gray"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:translationZ="1dp"
                android:src="@drawable/claim"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/mName"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="Reward from Travel guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </RelativeLayout>



    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/info"
        android:layout_marginTop="5dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        android:text="Congratulation for your achievements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/buttonOk"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="OK"
        android:textColor="#05B39D"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="130dp"
        app:layout_constraintTop_toBottomOf="@id/info"
        android:background="@drawable/voucher_bg"
        android:layout_width="200dp"
        android:layout_height="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>