<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="3dp"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/psName"
                android:text="NameStore"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/psDesc"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@id/psName"
                android:layout_below="@id/psName"
                android:text="Description"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/dash"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/dash"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>
            <ImageView
                android:id="@+id/background_discount"
                android:background="@drawable/back_disc_fix"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignRight="@id/dash"/>
            <TextView

                android:id="@+id/psDiscount"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_alignTop="@+id/background_discount"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/background_discount"
                android:layout_alignRight="@id/dash"
                android:layout_alignLeft="@id/background_discount"
                android:text="20%"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/psUpdateBtn"
                android:textColor="#05B39D"
                android:textAllCaps="false"
                android:text="Update"
                android:layout_marginTop="10dp"
                android:layout_below="@id/dash"
                android:layout_alignRight="@id/dash"
                android:background="@drawable/voucher_bg"
                android:layout_width="60dp"
                android:layout_height="30dp"/>
            <Button
                android:id="@+id/psDestroyBtn"
                android:textColor="#C5221F"
                android:textAllCaps="false"
                android:layout_marginRight="15dp"
                android:text="Delete"
                android:layout_marginTop="10dp"
                android:layout_below="@id/dash"
                android:background="@drawable/destroy_button"
                android:layout_toLeftOf="@id/psUpdateBtn"
                android:layout_width="60dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/psLabelEndDate"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_alignLeft="@id/psName"
                android:layout_below="@id/psDesc"
                android:textColor="#05B39D"
                android:text="Valid Untill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/psEnd"
                android:gravity="center_vertical"
                android:layout_below="@id/dash"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/psLabelEndDate"
                android:layout_alignTop="@id/psLabelEndDate"
                android:text="2019-12-12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>